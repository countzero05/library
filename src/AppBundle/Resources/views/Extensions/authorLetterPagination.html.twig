<div style="text-align: center">
  <ul class="pagination author-pagination">
    {% if prev is not null %}
      <li><a href="{{ path('author_letter', {letter: prev, page: app.request.query.getInt('page', 1)}) }}" aria-label="Previous"><span
              aria-hidden="true">«</span></a></li>
    {% endif %}
    {% for i in pages %}
      {% if i == page %}
        <li class="active"><a href="{{ path('author_letter', {letter: i, page: app.request.query.getInt('page', 1)}) }}">{{ i }}</a></li>
      {% else %}
        <li><a href="{{ path('author_letter', {letter: i, page: app.request.query.getInt('page', 1)}) }}">{{ i }}</a></li>
      {% endif %}
    {% endfor %}
    {% if next is not null %}
      <li><a href="{{ path('author_letter', {letter: next, page: app.request.query.getInt('page', 1)}) }}" aria-label="Next"><span
              aria-hidden="true">»</span></a></li>
    {% endif %}
  </ul>
</div>