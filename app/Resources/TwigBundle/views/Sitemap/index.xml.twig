{% spaceless %}
  <?xml version="1.0" encoding="UTF-8"?>
  <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for i in 1..sitemapCount %}
      <url>
        <loc>https://{{ hostname }}/sitemap{{ i }}.xml</loc>
        <lastmod>{{ 'now'|date('c') }}</lastmod>
      </url>
    {% endfor %}
  </urlset>
{% endspaceless %}